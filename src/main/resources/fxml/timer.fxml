<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nexusapp.controller.TimerController" spacing="12" stylesheets="/css/light.css" prefWidth="900.0" prefHeight="600.0">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <children>
                <Label text="Study Timer" styleClass="h1"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="startBtn" text="Start" onAction="#onStart"/>
                <Button fx:id="stopBtn" text="Stop" onAction="#onStop"/>
                <Button fx:id="saveBtn" text="Save Session" onAction="#onSave"/>
            </children>
            <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
        </HBox>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="80"/>
            </columnConstraints>
            <children>
                <Label text="Subject" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="subjectField" promptText="e.g. Math" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Notes" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextArea fx:id="notesArea" prefRowCount="3" promptText="Session notes" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Elapsed" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="elapsedLabel" text="00:00:00" style="-fx-font-size: 24;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
            <padding><Insets top="0" right="8" bottom="0" left="8"/></padding>
        </GridPane>

        <TableView fx:id="sessionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colSubject" text="Subject" prefWidth="200"/>
                <TableColumn fx:id="colDuration" text="Duration (min)" prefWidth="150"/>
                <TableColumn fx:id="colStart" text="Start" prefWidth="200"/>
                <TableColumn fx:id="colEnd" text="End" prefWidth="200"/>
            </columns>
        </TableView>
    </children>
    <padding><Insets topRightBottomLeft="10"/></padding>
</VBox>

